
<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr class="table-dark">
      <th>Title</th>
      <th>Event</th>
      <th>Date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.event %></td>
        <td><%= todo.date %></td>
        <td><%= todo.status %></td>
        <td><%= link_to 'Show', todo, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, class: "btn btn-secondary" %>
